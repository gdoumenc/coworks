{% extends "base.j2" %}
{% from 'macros/menu.j2' import menu as menu_ %}
{% from 'macros/features.j2' import features as features_ %}
{% from 'macros/banners.j2' import banners as banners_ %}
{% from 'macros/posts.j2' import posts as posts_ %}
{% from 'macros/excerpts.j2' import excerpts as excerpts_ %}
{% from 'macros/notes.j2' import notes as notes_ %}

{% block head %}
    <section id="header">
        <div class="container">

            <!-- Logo -->
            <h1 id="logo"><a href="/">{{ home.title_h1 }}</a></h1>
            <p>{{ home.subtitle }}</p>

            <!-- Nav -->
            {{ menu_(references, posts) }}

        </div>
    </section>
{% endblock %}

{% block content %}
    {{ features_(home.references, reference_ids) }}
    {{ banners_(home.banners, banner_ids) }}


    <!-- Main -->
    <section id="main">
        <div class="container">
            <div class="row">

                <!-- Content -->
                <div id="content" class="col-8 col-12-medium">
                    {{ posts_(home.posts, post_ids) }}
                </div>

                <!-- Sidebar -->
                <div id="sidebar" class="col-4 col-12-medium">
                    {{ excerpts_(home.excerpts, post_ids) }}
                    {{ notes_(home.notes, post_ids) }}
                </div>

            </div>
        </div>
    </section>
{% endblock %}

